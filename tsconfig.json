{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "noImplicitAny": false,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "e2e"
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "test",
    "dist", 
    "logs", 
  ]
}
